@model LibrarysAppTest.Models.Library

@{
    ViewData["Title"] = "Create New Library";
}

<h1>CreateNewLibrary</h1>

<h4>Library</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewLibrary" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" hidden="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LibraryType" class="control-label"></label>
                <input asp-for="LibraryType" class="form-control" />
                <span asp-validation-for="LibraryType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="הוסף" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowAllLibrarys">חזור לרשימת הספריות</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
