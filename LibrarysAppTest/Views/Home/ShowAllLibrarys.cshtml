@model IEnumerable<LibrarysAppTest.Models.Library>

@{
    ViewData["Title"] = "Show All Librarys";
}

<h1>ShowAllLibrarys</h1>

<p>
    <a asp-action="ShowAllLibrarys">הוספת ספרייה חדשה</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LibraryType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LibraryType)
            </td>
            <td>
                @Html.ActionLink("הצג מדפים", "ShowAllShelf", new { id = item.Id }) |
            </td>
        </tr>
}
    </tbody>
</table>
